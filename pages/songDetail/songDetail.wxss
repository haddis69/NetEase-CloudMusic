.songDetailContainer{
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.circle{
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 10rpx 0;
}
.needle{
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s linear;
}
.needleRotate{
  transform: rotate(0deg);
}
.distContainer{
  position: relative;
  top: -170rpx;
  height: 598rpx;
  width: 598rpx;
}
.dist{
  width: 100%;
  height: 100%;
}
.distAnimation{
  animation: disc 4s infinite linear;
  animation-delay: 1s;
}
@keyframes disc{
  from{}
  to{
    transform: rotate(360deg);
  }
}
.musicImg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}
.musicControl{
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #fff;
}
.musicControl text{
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.musicControl text.big{
  font-size: 80rpx;
}
.progressControl{
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  display: flex;
  line-height: 80rpx;
}
.barControl{
  position: relative;
  width: 450rpx;
  height: 4rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin: auto;
}
.currentControl{
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  z-index: 1;
  height: 4rpx;
  background-color: red;
}
.audioCircle{
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #fff;
}